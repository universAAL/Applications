<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>ltba.pom</artifactId>
		<groupId>org.universAAL.AALapplication</groupId>
		<version>B.0.2-SNAPSHOT</version>
		<relativePath>../ltba.pom</relativePath>
	</parent>
	<artifactId>ltba.ui</artifactId>
	<packaging>bundle</packaging>
	<name>LTBA user interface.</name>
	<dependencies>
		<dependency>
			<artifactId>ont.drools</artifactId>
			<groupId>org.universaal.ontology</groupId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<artifactId>ont.profile</artifactId>
			<groupId>org.universaal.ontology</groupId>
		</dependency>
		<!--		<dependency>-->
		<!--			<artifactId>drools.reasoner</artifactId>-->
		<!--			<groupId>org.universaal.aalapplication</groupId>-->
		<!--			<version>B.0.1</version>-->
		<!--		</dependency>-->
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.bus.context</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.ontology</groupId>
			<artifactId>ont.ltba</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.bus.ui</artifactId>
		</dependency>
	</dependencies>
	<description>The LTBA service user interface.</description>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.3.7</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-Name>${project.name}</Bundle-Name>
						<Bundle-Activator>org.universaal.ltba.ui.activator.Activator</Bundle-Activator>
						<Bundle-Description>${project.description}</Bundle-Description>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>

						<!--
							<Export-Package>*,org.universaal.drools.ui.impl.main</Export-Package>
						-->

					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>