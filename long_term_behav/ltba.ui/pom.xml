<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>new_services.pom</artifactId>
		<groupId>org.universAAL.AALapplication</groupId>
		<version>B.0</version>
	</parent>
	<groupId>org.universaal.aalapplication</groupId>
	<artifactId>ltba.ui</artifactId>
	<version>B.0.1</version>
	<packaging>bundle</packaging>
	<name>Drools user interface.</name>
	<description>The rules engine service user interface.</description>
	<dependencies>
		<dependency>
			<artifactId>ont.drools</artifactId>
			<groupId>org.universaal.ontology</groupId>
			<version>B.0.1</version>
		</dependency>
		<dependency>
			<artifactId>drools.reasoner</artifactId>
			<groupId>org.universaal.aalapplication</groupId>
			<version>B.0.1</version>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.bus.context</artifactId>
			<version>1.1.0</version>
		</dependency>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.osgi.core</artifactId>
			<version>1.0.1</version>
		</dependency>
		<dependency>
			<groupId>org.universAAL.ontology</groupId>
			<artifactId>ont.activityhub</artifactId>
			<version>0.0.4</version>
		</dependency>
		<dependency>
			<groupId>org.universAAL.ontology</groupId>
			<artifactId>ont.ltba</artifactId>
			<version>B.0.1</version>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.bus.ui</artifactId>
			<version>1.1.0</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.3.7</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-Name>${project.name}</Bundle-Name>
						<Bundle-Activator>org.universaal.drools.ui.activator.Activator</Bundle-Activator>
						<Bundle-Description>${project.description}</Bundle-Description>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>