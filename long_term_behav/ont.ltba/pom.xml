<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>ont.pom</artifactId>
		<groupId>org.universAAL.ontology</groupId>
		<version>1.2.0</version>
		<relativePath>../pom/pom.xml</relativePath>
	</parent>
	<artifactId>ont.ltba</artifactId>
	<version>C.0.1-SNAPSHOT</version>
	<packaging>bundle</packaging>
	<name>LTBA ontology.</name>
	<description>The Long Term Behaviour Analyzer Ontologies</description>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-Name>${project.name}</Bundle-Name>
						<Bundle-Activator>org.universAAL.ontology.Activator</Bundle-Activator>
						<Bundle-Description>${project.description}</Bundle-Description>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Export-Package>org.universAAL.ontology.ltba</Export-Package>
						<Private-Package>org.universAAL.ontology</Private-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.osgi.core</artifactId>
			<version>1.4.0</version>
			<type>bundle</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.universaal.middleware</groupId>
			<artifactId>mw.data.representation.osgi</artifactId>
			<version>1.2.0</version>
		</dependency>
		<dependency>
			<groupId>org.universaal.middleware</groupId>
			<artifactId>mw.bus.service.osgi</artifactId>
			<version>1.2.0</version>
		</dependency>
	</dependencies>
</project>