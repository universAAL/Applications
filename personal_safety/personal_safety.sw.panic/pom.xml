<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.universAAL.AALapplication</groupId>
		<artifactId>personal_safety.pom</artifactId>
		<version>F.0</version>
		<relativePath>../personal_safety.pom</relativePath>
	</parent>

	<artifactId>personal_safety.sw.panic</artifactId>
	<packaging>bundle</packaging>

	<name>Software Panic Button</name>
	<description>Maps a SW (GUI) Button as if it where a hardware Button</description>

	<licenses>
		<license>
		<name>Apache 2.0</name>
		<url>http://www.apache.org/licenses/</url>
		</license>
	</licenses>

	<dependencies>
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.container.osgi</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.bus.context.core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.bus.service.core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.bus.ui.core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.data.representation.core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.ontology</groupId>
			<artifactId>ont.phWorld</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.ontology</groupId>
			<artifactId>ont.profile</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-Name>${project.name}</Bundle-Name>
						<Bundle-Activator>org.universAAL.Application.personal_safety.sw.panic.osgi.Activator</Bundle-Activator>
						<Bundle-Description>${project.description}</Bundle-Description>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Export-Package>org.universAAL.Application.personal_safety.sw.panic.osgi</Export-Package>
						<Private-Package>org.universAAL.Application.personal_safety.sw.panic</Private-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<scm>
		<connection>${svn.base}/personal_safety/sw.panic</connection>
		<developerConnection>${svn.base}/personal_safety/sw.panic</developerConnection>
	</scm>
</project>
