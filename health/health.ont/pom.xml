<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>health.pom</artifactId>
		<groupId>org.universAAL.AALapplication</groupId>
		<version>0.1.0-SNAPSHOT</version>
		<relativePath>../pom</relativePath>
	</parent>

  <artifactId>health.ont</artifactId>
  <version>0.1.0-SNAPSHOT</version>
  <name>Health AAL service ontology</name>
  <description>the concepts for modeling health profile, treatments and motivational data for Health manager AAL service.</description>
  <packaging>bundle</packaging>
  
  <inceptionYear>2011</inceptionYear>  
  <organization>
  	<name>Universidad Polit√©cnica de Madrid - UPM</name>
  	<url>http://www.upm.es</url>
  </organization>
  <licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
  </licenses>
  
  <dependencies>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.data.representation</artifactId>
			<version>0.3.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.universAAL.ontology</groupId>
			<artifactId>ont.measurement</artifactId>
			<version>0.2.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.universAAL.ontology</groupId>
			<artifactId>ont.phWorld</artifactId>
			<version>0.2.2-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.universAAL.ontology</groupId>
			<artifactId>ont.profile</artifactId>
			<version>0.3.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.osgi.core</artifactId>
			<version>1.4.0</version>
			<type>bundle</type>
			<scope>provided</scope>
		</dependency>
  </dependencies>
    
    <build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-Name>${project.name}</Bundle-Name>
						<Bundle-Activator>org.universAAL.AALapplication.health.ont.Activator</Bundle-Activator>
						<Bundle-Description>${project.description}</Bundle-Description>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Export-Package>org.universAAL.AALapplication.health.ont.*</Export-Package>
						<Private-Package>org.universAAL.AALapplication.health.ont</Private-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
</project>
