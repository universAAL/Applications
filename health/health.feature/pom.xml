<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.universAAL.AALapplication</groupId>
    <artifactId>health.pom</artifactId>
    <version>F.0</version>
    <relativePath>../health.pom/</relativePath>
  </parent>
  
  <artifactId>health.karaf.feature</artifactId>
  <version>3.0.0</version>
  <name>Health Karaf Features</name>
  
    <dependencies>
      <dependency>
        <groupId>org.universAAL.AALapplication</groupId>
        <artifactId>health.performedSession.manager</artifactId>
      </dependency>
      <dependency>
        <groupId>org.universAAL.AALapplication</groupId>
        <artifactId>health.treat.manager</artifactId>
      </dependency>
      <dependency>
        <groupId>org.universAAL.AALapplication</groupId>
        <artifactId>health.profile.manager</artifactId>
      </dependency>   
      <dependency>
        <groupId>org.universAAL.AALapplication</groupId>
        <artifactId>health.ui.client</artifactId>
      </dependency>    
      <dependency>
        <groupId>org.universAAL.AALapplication</groupId>
        <artifactId>health.x73.adapter</artifactId>
      </dependency>
      <dependency>
      	<groupId>org.universAAL.middleware</groupId>
      	<artifactId>mw.karaf.feature</artifactId>
      </dependency>
      <dependency>
      	<groupId>org.universAAL.ontology</groupId>
      	<artifactId>ont.karaf.feature</artifactId>
      </dependency>
    </dependencies>
    
  <build>
  <filters>
  	<filter>./target/artifacts.versions</filter>
  </filters>
   
    <plugins>
      <plugin>
        <groupId>org.universAAL.support</groupId>
        <artifactId>uaal-maven-plugin</artifactId>
      </plugin>
      
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-features</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>target/features</outputDirectory>
              <resources>
                <resource>
                  <directory>src/main/features</directory>
                  <filtering>true</filtering>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-artifacts</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>target/features/health.xml</file>
                  <type>xml</type>
                  <classifier>features</classifier>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>