  	  <build>
			<plugins>
				<plugin>
					<groupId>org.apache.felix</groupId>
					<artifactId>maven-bundle-plugin</artifactId>
					<extensions>true</extensions>
					<configuration>
						<instructions>
							<Bundle-Name>${project.name}</Bundle-Name>
							<Bundle-Activator>org.universaal.ontology.health.Activator</Bundle-Activator>
							<Bundle-Description>${project.description}</Bundle-Description>
							<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
							<Bundle-Version>${project.version}</Bundle-Version>
							<Export-Package>org.universaal.ontology.health.owl.*,
							org.universaal.ontology.health.owl.services</Export-Package>
							<Private-Package>org.universaal.ontology.health.*</Private-Package>							
						</instructions>
					</configuration>
				</plugin>
		      <plugin>
					<groupId>org.universAAL.support</groupId>
					<artifactId>uaal-maven-plugin</artifactId>
			  </plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>build-helper-maven-plugin</artifactId>
					<configuration>
						<skipAttach>false</skipAttach>
					</configuration>
				</plugin>
			</plugins>
