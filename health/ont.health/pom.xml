<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>health.pom</artifactId>
		<groupId>org.universAAL.AALapplication</groupId>
		<version>0.2.0-SNAPSHOT</version>
		<relativePath>../pom</relativePath>
	</parent>

	<groupId>org.universaal.ontology.health</groupId>
	<artifactId>ont.health</artifactId>
	<packaging>bundle</packaging>

	<name>Health AAL service ontology</name>
	<description>the concepts for modeling health profile, treatments and motivational data for Health manager AAL service.</description>

	<inceptionYear>2011</inceptionYear>
	<organization>
		<name>Universidad Polit√©cnica de Madrid - UPM</name>
		<url>http://www.upm.es</url>
	</organization>

	<dependencies>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.data.representation</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.ontology</groupId>
			<artifactId>ont.measurement</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.ontology</groupId>
			<artifactId>ont.phWorld</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.ontology</groupId>
			<artifactId>ont.profile</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.osgi.core</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-Name>${project.name}</Bundle-Name>
						<Bundle-Activator>org.universAAL.AALapplication.health.ont.Activator</Bundle-Activator>
						<Bundle-Description>${project.description}</Bundle-Description>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Export-Package>org.universAAL.AALapplication.health.ont.*</Export-Package>
						<Private-Package>org.universAAL.AALapplication.health.ont</Private-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
