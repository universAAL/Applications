  <artifactId>safety_home.service.client</artifactId>
  <name>Safety at Home Client</name>
  <description>Safety at Home Client Service</description>
  <packaging>bundle</packaging>
  <inceptionYear>2011</inceptionYear>  
  <licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
  </licenses>
    <dependencies>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.osgi.core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.composite</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.ontology</groupId>
			<artifactId>ont.safety</artifactId>
			<version>2.0.3-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.universAAL.ontology</groupId>
			<artifactId>ont.lighting</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.ontology</groupId>
			<artifactId>ont.profile</artifactId>
		</dependency>
		<dependency>
      		<groupId>org.apache.derby</groupId>
      		<artifactId>derby</artifactId>
      		<version>10.7.1.1</version>
  		</dependency>		
	</dependencies>
    <build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-Name>${project.name}</Bundle-Name>
						<Bundle-Activator>org.universAAL.AALapplication.safety_home.service.uiclient.osgi.Activator</Bundle-Activator>
						<Bundle-Description>${project.description}</Bundle-Description>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Private-Package>org.universAAL.AALapplication.safety_home.service.uiclient</Private-Package>
						<Import-Package>org.apache.derby.jdbc,*</Import-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>uAAL-Runtime</id>
			<dependencies>
				<dependency>
					<groupId>org.universAAL.AALapplication</groupId>
					<artifactId>safety_home.service.server</artifactId>
				</dependency>
				<dependency>
					<groupId>org.universAAL.ui</groupId>
					<artifactId>ui.dm</artifactId>
				</dependency>
				<dependency>
					<groupId>org.universAAL.ui</groupId>
					<artifactId>ui.handler.gui.swing</artifactId>
				</dependency>
				<dependency>
					<groupId>org.universAAL.ui</groupId>
					<artifactId>ui.handler.gui.swing.classicLAF</artifactId>
				</dependency>
				<dependency>
					<groupId>org.universAAL.ui</groupId>
					<artifactId>ui.handler.gui.swing.bluesteelLAF</artifactId>
				</dependency>
			</dependencies>
		</profile>
	</profiles>
</project>