	<issueManagement>
		<system>GForge - Tracker</system>
		<url>http://forge.universaal.org/gf/project/new_services/tracker/?action=TrackerItemBrowse&amp;tracker_id=226
		</url>
	</issueManagement>
	
	<scm>
