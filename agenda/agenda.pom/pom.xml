	</modules>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.universAAL.ontology</groupId>
				<artifactId>ont.agenda</artifactId>
				<version>1.2.2-SNAPSHOT</version>
			</dependency>
			<dependency>
