<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>ont.pom</artifactId>
    <groupId>org.universAAL.ontology.services</groupId>
    <version>2.0.2-SNAPSHOT</version>
    <relativePath>../ont.pom</relativePath>
  </parent>
  <groupId>org.universAAL.ontology</groupId>
  <artifactId>ont.fitbitdata</artifactId>
  <version>2.0.2-SNAPSHOT</version>
  <packaging>bundle</packaging>
  <name>AALfficiency Service - Fitbit Data</name>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-Name>${project.name}</Bundle-Name>
            <Bundle-Description>${project.description}</Bundle-Description>
            <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
            <Export-Package>org.universAAL.ontology.fitbitdata</Export-Package>
            <Private-Package>org.universAAL.ontology;-split-package:=first</Private-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
